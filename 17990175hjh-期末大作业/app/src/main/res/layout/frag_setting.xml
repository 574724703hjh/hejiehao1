<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/at_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color333333"
            android:textSize="17sp"
            android:text="个人中心"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="#ebebed"/>
    <LinearLayout
        android:id="@+id/rl_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingBottom="17dp"
        android:paddingTop="17dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_16"
                android:drawablePadding="4dp"
                android:drawableRight="@drawable/arr"
                android:singleLine="true"
                android:text="用户名"
                android:textColor="@color/color333333"
                android:textSize="28sp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/circular_headimg"
            android:layout_width="@dimen/height64"
            android:layout_height="@dimen/height64"
            android:layout_centerInParent="true"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="@dimen/padding_16"
            android:scaleType="centerCrop"
            android:src="@drawable/def_face_square"
            android:layout_centerVertical="true"
            />

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_marginLeft="52dp"
        android:background="@color/divider" />
    <LinearLayout
        android:id="@+id/ll_order"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height54"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/iv_img"
            android:layout_marginLeft="@dimen/padding_16"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/dongtai"/>
        <TextView
            android:layout_marginLeft="@dimen/padding_16"
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="我的订单"
            android:textSize="@dimen/font16"
            android:textColor="@color/color333333"
            android:gravity="center_vertical" />
        <ImageView
            android:id="@+id/iv_arr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arr"
            android:layout_marginRight="16dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_phone_reg_bg"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="注销"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>